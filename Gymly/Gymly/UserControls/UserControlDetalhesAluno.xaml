<UserControl x:Class="Gymly.UserControls.UserControlDetalhesAluno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gymly.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>


        <TextBlock Name="txtBlockNome"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Margin="0,0,0,10" VerticalAlignment="Bottom" TextAlignment="Left" FontWeight="Bold" FontSize="15pt"/>
        <TextBlock Name="txtBlockCpf"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Margin="0,0,0,10" VerticalAlignment="Bottom" TextAlignment="Left" FontWeight="Bold" FontSize="15pt"/>
        <TextBlock Name="txtBlockEmail"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Margin="0,0,0,10" VerticalAlignment="Bottom" TextAlignment="Left" FontWeight="Bold" FontSize="15pt"/>
        <TextBlock Name="txtBlockTelefone"  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Margin="0,0,0,10" VerticalAlignment="Bottom" TextAlignment="Left" FontWeight="Bold" FontSize="15pt"/>
        <TextBlock Name="txtBlockNivel"  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Margin="0,0,0,10" VerticalAlignment="Bottom" TextAlignment="Left" FontWeight="Bold" FontSize="15pt"/>
        <TextBlock Name="txtBlockSexo"  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Height="50" Margin="0,0,0,10" VerticalAlignment="Bottom" TextAlignment="Left" FontWeight="Bold" FontSize="15pt"/>


    </Grid>
</UserControl>
