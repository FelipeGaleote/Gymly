<UserControl x:Class="Gymly.UserControls.UserControlCadastroAluno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gymly.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Margin="30,10,0,10" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" FontSize="30" Text="Nome"></TextBlock>
        <TextBlock Grid.Column="1" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" FontSize="30" Text="Email"></TextBlock>
        <TextBlock Grid.Column="1" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" FontSize="30" Text="CPF" ></TextBlock>
        <TextBlock Grid.Column="2" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" FontSize="30" Text="Telefone" ></TextBlock>
        <TextBlock Grid.Column="2" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" FontSize="30" Text="Genero"></TextBlock>
        <TextBlock Grid.Column="2" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" FontSize="30" Text="Atividades fisicas"></TextBlock>




        <TextBox Grid.Column="2" Grid.Row="1" Width="Auto" Margin="0,0,30,0" VerticalAlignment="Center"  Name="txtBoxNome" FontSize="18"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="2" Width="Auto" Margin="0,0,30,0" VerticalAlignment="Center"  Name="txtBoxEmail" FontSize="18"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="3" Width="Auto" Margin="0,10,30,10"  VerticalAlignment="Center" Name="txtBoxCpf" FontSize="18"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="4" Width="250" HorizontalAlignment="Right" Margin="0,10,30,10" VerticalAlignment="Center"  Name="txtBoxTelefone" FontSize="18"></TextBox>
        <Button Grid.Column="1" Grid.Row="4" Width="Auto" Height="Auto" VerticalAlignment="Center" Margin="30,0,30,0"  Name="buttonAtivarCalendario" Content="Data de nascimento" Background="DarkSlateGray" BorderBrush="Gray" FontSize="25" Click="buttonAtivarCalendario_Click"></Button>
        <Viewbox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="30,0,30,0" Grid.RowSpan="4" >
        <Calendar  Name="calendarDataNasc" Visibility="Hidden" Language="pt-BR" DisplayMode="Year"></Calendar>
        </Viewbox>
        <RadioButton GroupName="Genero" Content="Masculino" Grid.Column="2" Grid.Row="5" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,10,170,10" FontSize="20"/>
        <RadioButton GroupName="Genero" Content="Feminino" Grid.Column="2" Grid.Row="5" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center"  Margin="0,10,30,10" FontSize="20"/>
        <ComboBox Grid.Column="2" Grid.Row="6" Width="150" HorizontalAlignment="Right" Margin="0,10,30,10" VerticalAlignment="Center" Name="comboBoxNivel" FontSize="16">
            <ComboBoxItem FontSize="16" IsSelected="True">Sedentario</ComboBoxItem>
            <ComboBoxItem FontSize="16">Iniciante</ComboBoxItem>
            <ComboBoxItem FontSize="16">Intermediario</ComboBoxItem>
            <ComboBoxItem FontSize="16">Avançado</ComboBoxItem>
        </ComboBox>
        <Button Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2" Height="Auto" Width="Auto" Margin="50,10,50,10" Content="Cadastrar aluno" FontSize="30"></Button>


    </Grid>
</UserControl>
